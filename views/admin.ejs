<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>admin</title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="/assets/css/Sidebar-Menu-1.css">
    <link rel="stylesheet" href="/assets/css/Sidebar-Menu.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
</head>

<body style="font-family: Montserrat, sans-serif;">
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"> <a href="/manage/all">Home </a></li>
                <li> <a href="/manage/all">Tất cả sản phẩm</a></li>
                <li> <a href="/manage/tcdb">Tiểu cảnh đề bàn</a></li>
                <li> <a href="/manage/ccdb">Chậu cảnh để bàn</a></li>
                <li> <a href="/manage/ccmn">Cây cảnh mini&nbsp;</a></li>
                <li> <a href="/manage/pktt">Phụ kiên trang trí</a></li>
                <li> <a href="/admin/logout">Log out</a></li>

            </ul>
        </div>
        <div class="page-content-wrapper">
            <div class="container-fluid text-right"><a class="btn btn-link" role="button" id="menu-toggle"
                    href="#menu-toggle"><i class="fa fa-bars"></i></a>
                <div class="row text-left d-flex justify-content-between">
                    <div class="col-sm-11 col-md-11 col-lg-5 col-xl-5 cover"
                        style="padding-top: 20px;margin-right: 20px;margin-left: 30px;">

                        <%= typeof msg != 'undefined' ? msg : '' %>
                        <form class="bootstrap-form-with-validation" method="POST" action="/manage"
                            enctype="multipart/form-data">
                            <h3 class="text-center">Product</h3>
                            <div class="form-group"><label for="text-input">Name</label><input class="form-control"
                                    type="text" id="text-input" name="name"></div>
                            <div class="form-group"><label for="text-input">Id</label><input class="form-control"
                                    type="text" id="text-input" name="id"></div>
                            <div class="form-group"><label for="email-input">Prize</label><input class="form-control"
                                    type="number" id="email-input" name="prize"></div>
                            <div class="form-group"><label for="file-input">Image</label><input type="file"
                                    id="file-input" name="img"></div>
                            <div class="form-group">
                                <div class="form-check"><input class="form-check-input" type="radio" name="type"
                                        id="formCheck-6" value="tcdb"><label class="form-check-label"
                                        for="formCheck-6">Tiểu cảnh đẻ
                                        bàn</label></div>
                                <div class="form-check"><input class="form-check-input" type="radio" name="type"
                                        checked="" id="formCheck-7" value="ccdb"><label class="form-check-label"
                                        for="formCheck-7">Chậu cảnh để bàn</label></div>
                                <div class="form-check"><input class="form-check-input" type="radio" name="type"
                                        id="formCheck-8" value="ccmn"><label class="form-check-label"
                                        for="formCheck-8">Cây cảnh
                                        mini</label></div>
                                <div class="form-check"><input class="form-check-input" type="radio" name="type"
                                        id="formCheck-8" value="pktt"><label class="form-check-label"
                                        for="formCheck-8">Phụ kiện
                                        trang trí</label></div>
                            </div>
                            <div class="form-group"><button class="btn btn-primary" type="submit">OK</button></div>
                        </form>
                    </div>
                    <div class="col-sm-11 col-md-11 col-lg-5 col-xl-5 list-item"
                        style="margin-top: 20px;margin-right: 20px;padding-top: 20px;margin-left: 30px; max-height: 543px; overflow: auto;">
                        <h3 class="text-center">Items</h3>
                        <div class="row">
                            <div class="col-4">
                                <h6>Name</h6>
                            </div>
                            <div class="col-4">
                                <h6>Kind</h6>
                            </div>
                            <div class="col-3">
                                <h6>Prize</h6>
                            </div>
                        </div>
                        <%category.forEach((cate) => {%>
                        <div class="row">
                            <div class="col-4">
                                <p><%= cate.Name%></p>
                            </div>
                            <div class="col-4">
                                <%if(cate.Type == "tcdb"){%>
                                <p>Tiểu cảnh để bàn</p>
                                <%} else if (cate.Type == "ccdb"){%>
                                <p>Cây cảnh để bàn</p>
                                <%} else if (cate.Type == "ccmn") {%>
                                <p>Cây cảnh mini</p>
                                <%} else {%>
                                <p>Phụ kiện trang trí</p>
                                <%}%>
                                </div>
                                <div class="col-3">
                                    <p><%= cate.Prize%></p>
                            </div>
                            <div class="col-1">
                                <a href="/manage/delete/<%= cate.Id %>"><span class="fa fa-trash">
                                </span></a>
                        </div>
                        </div>
                        <%})%>
                    </div>
                </div>
                <div class="order cover">
                    <div class="row text-left">
                        <div class="col-lg-2">
                            <h5 class="text-center">Name</h5>
                        </div>
                        <div class="col-lg-1">
                            <h5 class="text-center">Phone</h5>
                        </div>
                        <div class="col-lg-3">
                            <h5 class="text-center">Email</h5>
                        </div>
                        <div class="col-lg-2">
                            <h5 class="text-center">Date</h5>
                        </div>
                        <div class="col-lg-3">
                            <h5 class="text-center">Cart</h5>
                        </div>
                        <div class="col-lg-1">
                            <h5 class="text-center">Total</h5>
                        </div>
                    </div>
                    <%order.forEach((order) => {%>
                    <div class="row text-left">
                        <div class="col-lg-2">
                            <p class="text-center"><%= order.Name%></p>
                        </div>
                        <div class="col-lg-1">
                            <p class="text-center"><%= order.Phone%></p>
                            </div>
                            <div class="col-lg-3">
                                <p class="text-center"><%= order.Email%></p>
                            </div>
                            <div class="col-lg-2">
                                <p class="text-center"><%= order.Date%><br></p>
                            </div>
                            <div class="col-lg-3">
                                <%order.Item.forEach((cart) => {
                                    %>
                                <div class="text-center d-flex justify-content-between">
                                    <span><%= cart.item.Name%></span><span><%= cart.quantity%></span>
                                </div>
                                <%
                                })%>
                        </div>
                        <div class="col-lg-1">
                            <p class="text-center"><%= order.Total%></p>
                        </div>
                    </div>
                    <%
                    })%>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/Sidebar-Menu.js"></script>
</body>

</html>