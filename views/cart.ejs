<!-- NAVBAR -->

<body style="font-family: 'Montserrat Alternates', sans-serif;padding: 0;">
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                                </div>
                                <div class="col-xs-6">
                                    <button type="button" class="btn btn-primary btn-sm btn-block">
                                        <a href="/" style="color: white;"><span
                                                class="glyphicon glyphicon-share-alt"></span> Continue shopping</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <%if(products){%>
                        <% products.forEach(function(data) {%>
                        <div class="row">
                            <div class="col-xs-2"><img class="img-responsive" src="<%='/assets/img/'+data.item.Img%>">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong><%= data.item.Name%></strong></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6><strong><%= data.price %> Ä‘ <span class="text-muted">x</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control input-sm" value="<%= data.quantity%>">
                                </div>
                                <div class="col-xs-2">
                                    <a href="/remove/<%= data.item.Id %>"><span class="glyphicon glyphicon-trash">
                                        </span></a>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <%})%>
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-xs-9">
                                <h4 class="text-right">Total <strong><%= totalPrice%></strong></h4>
                            </div>
                            <div class="col-xs-3">
                                    <a href="/custumer" style="color: white;"><button type="button" class="btn btn-success btn-block">Check out</button></a>
                            </div>
                        </div>
                    </div>
                    <%} else {%>
                    <p> Your shopping cart is empty.</p>
                    <%}%>
                        </form>
            </div>
        </div>
    </div>
</div>
